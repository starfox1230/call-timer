{
  "name": "modern-night-mode-timer",
  "version": "1.0.0",
  "description": "A simple always‑on‑top night‑mode timer built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.8.0"
  },
  "build": {
    "appId": "com.yourdomain.modern-night-mode-timer",
    "productName": "Modern Night Mode Timer",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "zip"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "license": "MIT"
}
